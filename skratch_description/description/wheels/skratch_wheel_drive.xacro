<?xml version="1.0" ?>
<robot name="skratch_wheel_drive" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="skratch_wheel_drive" params="name parent">
        <xacro:include filename="wheels/skratch_wheel.xacro"/>

       
        <link name="${name}">
            <inertial>
                <origin xyz="0.00023 -0.00095 0.04843" rpy="0 0 0"/>
                <mass value="1.46273"/>
                <inertia ixx="0.00302046423" ixy="0.00000851844" ixz="0.00001188180" iyy="0.00326495472" iyz="0.00001855408" izz="0.00386072964"/>
            </inertial>
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
                <geometry>
                    <mesh filename="file://$(find skratch_description)/meshes/wheels/kelo_drive_mid_part.dae" scale="1 1 1"/>
                </geometry>
                <material name="LightGrey">
                    <color rgba="0.8 0.8 0.8 1.0"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
                <geometry>
                    <mesh filename="file://$(find skratch_description)/meshes/wheels/kelo_drive_mid_part.dae" scale="1 1 1"/>
                </geometry>
            </collision>
        </link>

        <gazebo reference="${name}">
            <material>Gazebo/LightGrey</material>
        </gazebo>
        
        <xacro:skratch_wheel name="${name}_wheel_left" parent="${name}"/>
        <joint name="${name}_wheel_left_joint" type="continuous">
            <origin xyz="0.0 0.04 0.0" rpy="0.0 0.0 0.0"/>
            <parent link="${name}"/>
            <child link="${name}_wheel_left"/>
            <axis xyz="0.0 1.0 0.0"/>
            <!-- <gazebo>
                <mu1>1.0</mu1>
                <mu2>1.0</mu2>
                <kp>100000.0</kp>
                <kd>1.0</kd>
                <fdir1>0 0 0</fdir1>
            </gazebo> -->
        </joint>

        <xacro:skratch_wheel name="${name}_wheel_right" parent="${name}"/>
        <joint name="${name}_wheel_right_joint" type="continuous">
            <origin xyz="0.0 -0.04 0.0" rpy="0.0 0.0 0.0"/>
            <parent link="${name}"/>
            <child link="${name}_wheel_right"/>
            <axis xyz="0.0 1.0 0.0"/>
            <!-- <gazebo>
                <mu1>1.0</mu1>
                <mu2>1.0</mu2>
                <kp>100000.0</kp>
                <kd>1.0</kd>
                <fdir1>0 0 0</fdir1>
            </gazebo> -->
        </joint>
        
    </xacro:macro>
</robot>